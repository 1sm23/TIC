.t1v1.videoview {
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 100%;
  background-color: #2A2C2F;
}

.t1v1 .video-box {
  position: absolute;
  display: flex;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

@media (orientation: portrait) {
  .t1v1 .video-box {
    flex-direction: row;
  }

  .t1v1 .pusher-box {
    position: relative;
    flex: 1;
  }

  .t1v1 .player-box {
    position: relative;
    flex: 1;
  }
}

/* 横屏 */
@media (orientation: landscape) {
  .t1v1 .video-box {
    flex-direction: column;
  }

  .t1v1 .pusher-box {
    position: relative;
    flex: 1;
  }

  .t1v1 .player-box {
    position: relative;
    flex: 1;
  }
}



.t1v1 live-pusher {
  width: 100%;
  height: 100%;
}

.t1v1 .poster {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #000;
}

.t1v1 .set {
  position: absolute;
  width: 100%;
  height: 100%;
}

.t1v1 live-player {
  width: 100%;
  height: 100%;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.t1v1 .loading {
  position: absolute;
  width: 100%;
  height: 100%;
}

.t1v1 .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}